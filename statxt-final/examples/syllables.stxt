/* 
This program reads a file and print the no. of syllables of each word and avg syllables 
*/

bool is_vowel(char c){
	if( c=='a' || c=='e' || c=='i' || c=='o' || c=='u' || c=='y'){
		return true;
	}
	return false;
}

